<div class="contaier">
    <h3>新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="row">
        <label class="col-lg-3">ニックネーム</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(ニックネーム)" %>
        </div>
 
      </div><br>


      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0" %>
        </div>
      </div><br>


 
      <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password",  placeholder: "\uf023" %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password",  placeholder: "\uf023" %>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>


    <h3>既に登録済みの方</h3>
    <div class="col-sm-3">
      <%- if controller_name != 'sessions' %>
        <%= link_to "こちら", new_session_path(resource_name) %>
      <% end %>
  からログインしてください
    </div>
    <% end %>
  </div>