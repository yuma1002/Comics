

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>書籍一覧</h2>

  <div class="text-right">
      <%= link_to "新規登録" ,new_admins_item_path, class:"btn btn-lg btn-primary" %>
  </div>


      <table class="table">
        <thead>
          <tr>
            <th>書籍一覧</th>
            <th>書籍名</th>
        
            <th>ジャンル</th>

          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name ,admins_item_path(item) %></td>
       
              <td><%= item.genre.name %></td>
      
      
      
      
      
      
            </tr>
            <% end %>
            <%#= paginate @items %>
        </tbody>
      </table>
    </div>
  </div>