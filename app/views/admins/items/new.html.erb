 <div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="row">
    <%= form_for(@items, url: admins_items_path) do |f| %>

    <div class="container" style="margin-top: 20px;">
     <h2>書籍新規登録</h2>

      <div class="item-new-form">
        <%#= f.attachment_field :image %>
      </div>
      <div class="product-img" style="margin-top: 20px;">
        <%#= image_tag 'no_image.jpg', id:"file-preview", :size => '50x50' %>
      </div>
    </div>

    <br><br><br>
      <div class="col-md-5 col-md-offset-2 col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>

<h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
            <tr>
              <p>書籍名</p>
              <p><%= f.text_field :name, class: "form-control", :size=>"80" %></p>
            </tr>

            <tr>
              <p>あらすじ</p>
              <p><%= f.text_area :description, class: "form-control", :size=>"80x10" %></p>
            </tr>

            <tr>
              <p>ジャンル</p>
              <p>          <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></p>
            </tr>

       
          </tbody>
        </table>

        <div class="text-right">
        <%= f.submit "新規登録" ,class: "btn btn-primary text-right" %>
        </div>
        </div>
        <% end %>

    </div>
  </div>
</div>